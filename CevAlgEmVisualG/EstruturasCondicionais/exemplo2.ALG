algoritmo "semnome"
var

numero: inteiro

inicio
escreval("Vamos verificar se um numero é par ou impar")
escreval("Digite um numero: ")
leia(numero)

            se((numero%2 = 0) ou ( numero = 0) )entao
               escreva("O numero digitado é par: ", numero)
            senao
                 escreva("O numero digitado é impar:", numero)
            fimse

fimalgoritmo